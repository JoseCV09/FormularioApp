<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2"
    >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="14dp"
        android:layout_y="331dp"
        android:fontFamily="sans-serif-thin"
        android:text="Datos:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="48dp"
        android:layout_y="106dp"
        android:fontFamily="sans-serif-thin"
        android:text="Nombre:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="52dp"
        android:layout_y="229dp"
        android:fontFamily="sans-serif-thin"
        android:text="Telefono:"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="52dp"
        android:layout_y="167dp"
        android:fontFamily="sans-serif-thin"
        android:text="Email"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="41dp"
        android:layout_x="158dp"
        android:layout_y="162dp"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/custom_email_icon"
        android:drawablePadding="7dp"
        android:ems="10"
        android:hint="Ingresar email"
        android:inputType="textEmailAddress"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="77dp" />

    <EditText
        android:id="@+id/nombre"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_x="158dp"
        android:layout_y="101dp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/custom_persona_icon"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawablePadding="7dp"
        android:ems="10"
        android:hint="Ingresar nombre"
        android:inputType="textPersonName"
        tools:layout_editor_absoluteX="76dp"
        tools:layout_editor_absoluteY="19dp" />

    <EditText
        android:id="@+id/telefono"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_x="159dp"
        android:layout_y="220dp"
        android:background="@drawable/custom_input"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:drawableStart="@drawable/custom_phone_icon"
        android:drawablePadding="7dp"
        android:ems="10"
        android:hint="Ingresar telefono"
        android:inputType="phone"
        tools:layout_editor_absoluteX="78dp"
        tools:layout_editor_absoluteY="141dp" />

    <Button
        android:id="@+id/btn_enviar"
        android:layout_width="211dp"
        android:layout_height="wrap_content"
        android:layout_x="159dp"
        android:layout_y="283dp"
        android:background="@drawable/custom_button"
        android:text="Enviar"
        android:textColor="#FFFFFF"
        tools:layout_editor_absoluteX="145dp"
        tools:layout_editor_absoluteY="209dp" />

    <ListView
        android:id="@+id/listview_datos"
        android:layout_width="match_parent"
        android:layout_height="341dp"
        android:layout_y="390dp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:layout_x="75dp"
        android:layout_y="15dp"
        android:fontFamily="cursive"
        android:text="Basic Form"
        android:textColorHighlight="#A30D0D"
        android:textSize="60sp" />


</AbsoluteLayout>